<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <div>
    <%= link_to user_path(post.user) do %>
    <%= image_tag post.user.get_profile_image(30, 30) %>
    <% end %>
    <%= post.user.name %>
    <%= link_to post_path(post.id) do %>
      <p><%= post.title %></p>
    <% end %>
    <p><%= post.body %></p>
  </div>
<% end %>